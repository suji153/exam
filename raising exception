
DECLARE
    v_num1 NUMBER := 10;
    v_num2 NUMBER := 0;
BEGIN
    IF v_num2 = 0 THEN
        RAISE ZERO_DIVIDE;
    ELSE
        DBMS_OUTPUT.PUT_LINE('Result: ' || v_num1 / v_num2);
    END IF;
EXCEPTION
    WHEN ZERO_DIVIDE THEN
        DBMS_OUTPUT.PUT_LINE('Error: Division by zero');
END;
/
------------------------------------
Sample Output (Division by zero):
Error: Division by zero
-----------------------------------
