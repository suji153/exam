SET SERVEROUTPUT ON;

DECLARE
    num1 NUMBER := 10;
    num2 NUMBER := 20;
    num3 NUMBER := 15;
    greatest NUMBER;
BEGIN
    IF num1 >= num2 AND num1 >= num3 THEN
        greatest := num1;
    ELSIF num2 >= num1 AND num2 >= num3 THEN
        greatest := num2;
    ELSE
        greatest := num3;
    END IF;

    DBMS_OUTPUT.PUT_LINE('The greatest number among ' || num1 || ', ' || num2 || ', and ' || num3 || ' is: ' || greatest);
END;
/
